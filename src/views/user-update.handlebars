<form action="../user/update" method="POST">
  <div class="rounded border border-2 bg-light  p-4 m-4">
    <div class="text-center">
      <label class="form-label mb-5 mt-2 form-label-xlg">Search User:</label>
    </div>
    <div class="row">
      <div class="col-lg d-grid">
        <label for="username" class="form-label mt-2">Current Username</label>
        <input type="text" name="username" class="form-control" id="username" aria-describedby="userHelp"
         {{#if username}}value= {{username}}{{/if}}>
        <div id="userHelp" class="form-text">The username is case sensitive</div>
      </div>
      <div class="col-lg d-grid">
        <label for="phone" class="form-label mt-2">Current Phone Number</label>
        <input type="text" name="phone" class="form-control" id="phone" aria-describedby="phoneHelp"
         {{#if phone}}value= {{phone}}{{/if}}>
        <div id="phoneHelp" class="form-text">Please use the format: xxx-xxx-xxxx</div>
      </div>
    </div>
    <div class="text-center mt-5">
      <hr>
      <label class="form-label mb-5 mt-2 form-label-xlg">Update Properties To:</label>
    </div>
    <div class="row">
      <div class="col-lg d-grid">
        <label for="newUsername" class="form-label mt-2">New Username</label>
        <input type="text" name="newUsername" class="form-control" id="newUsername" aria-describedby="newUserHelp"
         {{#if newUsername}}value= {{newUsername}}{{/if}}>
        <div id="newUserHelp" class="form-text">The username is case sensitive</div>
      </div>
      <div class="col-lg d-grid">
        <label for="newPhone" class="form-label mt-2">New Phone Number</label>
        <input type="text" name="newPhone" class="form-control" id="newPhone" aria-describedby="newPhoneHelp"
         {{#if newPhone}}value= {{newPhone}}{{/if}}>
        <div id="newPhoneHelp" class="form-text">Please use the format: xxx-xxx-xxxx</div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg d-grid">
        <button type="submit" class="btn btn-dark mt-4">Update Users</button>
      </div>
      <div class="col-lg d-grid">
        <button type="reset" class="btn btn-dark mt-4">Clear Form</button>
      </div>
    </div>
  </div>
</form>
{{#if success}}
<div class="m-4 p-3 text-center bg-success text-white rounded-pill border border-2">
  Successfully updated {{success}} user(s)!
</div>
{{/if}}
{{#if error}}
<div class="m-4 p-3 text-center bg-danger text-white rounded-pill border border-2">
  Couldn't update the user! <br>
  Error: {{error}}
</div>
{{/if}}